<h2>Other Movies Directed by <%= @director %></h2>
Suggestion 1
<table class="table table-striped col-md-12" id="suggestion1">
  <thead>
    <tr>
      <th>Attraction</th>
      <th>Stops</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @suggestions[0].each do |attraction| %>
      <tr>
        <td>
          <%= attraction.name %>
        </td>
        <td>
          <%= attraction.city %>
        </td>
        <td>
          <%= attraction.rating %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Details', :class => 'btn btn-primary' %>

